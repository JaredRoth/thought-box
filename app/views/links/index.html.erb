<%= link_to "Sign Out", logout_path, class: "btn right" %>
<h4>Create a new link</h4>
<%= form_for @link, url: links_path do |f| %>
  <div class="form-group">
    <%= f.text_field :title, placeholder: "Title", class:"form-control" %><br>
  </div>
  <div class="form-group">
    <%= f.text_field :url, placeholder: "URL", class:"form-control" %><br>
  </div>
  <%= f.submit "Submit Link", class: "btn btn-default"%>
<% end %>
<br>
<section id="filters">
  <div class="row">
    <form id="live-search" action="" class="input-field" method="post">
      <i class="material-icons prefix">search</i>
      <input placeholder="Search Thoughts" type="text" class="text-input" id="search" name="search" />
    </form>
    <button id="read-filter" class="btn">Filter by Read</button>
    <button id="unread-filter" class="btn">Filter by Unread</button>
    <button id="reset-status-filter" class="btn">View all read statuses</button>
    <button id="sort" class="btn" data-sorted="false"><i class="material-icons right">sort_by_alpha</i>Sort by Title</button>
  </div>
</section>
<section class="my-links collection">
  <% @links.each do |link| %>
    <% unless link.id == nil %>
      <% status = link.read === true ? "Read" : "Unread" %>
      <div class="link collection-item avatar" id="link<%= link.id %>" data-status="<%= link.read %>" data-title="<%= link.title %>">
        <a href="/links/1/edit"><i class='material-icons circle teal lighten-2'>mode_edit</i></a>
        <span class="title"><%= "#{link.title}" %></span>
        <p><%= "#{link.url}" %></p>
        <span class="read-status secondary-content btn" data-id="<%= link.id %>"><%= status %></span>
      </div>
    <% end %>
  <% end %>
</section>
