<%= link_to "Sign Out", logout_path %>
<%= form_for @link, url: links_path do |f| %>
  <div class="form-group">
    <%= f.text_field :title, placeholder: "Title", class:"form-control" %><br>
  </div>
  <div class="form-group">
    <%= f.text_field :url, placeholder: "URL", class:"form-control" %><br>
  </div>
  <br>
  <%= f.submit "Submit Link", class: "btn btn-default"%>
<% end %>
<ul class="my-links">
  <% @links.each do |link| %>
    <% unless link.id == nil %>
      <% status = link.read === true ? "Unread" : "Read" %>
      <li><%= "#{link.title}: #{link.url}" %><%= button_to "Mark as #{status}", link_path(link), method: :patch%></li>
    <% end %>
  <% end %>
</ul>
