<!DOCTYPE html>
<html>
<head>
  <title>ThoughtBox</title>
  <!-- <%= stylesheet_link_tag    'application', media: 'all' %> -->
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
<% flash.each do |type, message| %>
  <%= content_tag :div, message.html_safe, class: "#{type} flashy", id: "flash_notice" %>
<% end %>
<%= yield %>

</body>
</html>
